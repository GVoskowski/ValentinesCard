<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backColor2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.valentinescard.MainActivity">

    <ImageView
        android:id="@+id/backImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/valentineback1"
        tools:ignore="ContentDescription" />

    <TextView

        android:id="@+id/text_1"
        style="@style/TextViewStyle"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@id/backImage"
        android:layout_margin="@dimen/marg10"
        android:text="@string/here_s_a_flower_to_show_my_love" />

    <TextView
        android:id="@+id/text_2"
        style="@style/TextViewStyle"
        android:layout_alignLeft="@+id/text_1"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/text_1"
        android:text="@string/hit_the_button_i_ll_play_a_song" />

    <com.getbase.floatingactionbutton.FloatingActionButton
        style="@style/FloatingButtonHeart"
        android:id="@+id/floatingActionButton"
        android:layout_above="@+id/text_2"
        android:src="@drawable/ic_favorite_border_black_24dp"
        tools:style="?android:attr/imageButtonStyle"
        app:fab_colorNormal="@color/backColor2"
        app:fab_colorPressed="@color/textColor"
         />

</RelativeLayout>
